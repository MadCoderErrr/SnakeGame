import pygame, sys, time, random
from pygame.locals import *

pygame.init()
WINDOWWIDTH  = 600
WINDOWHEIGHT = 400

SNAKESPEED   = 10
SNAKEBLOCK   = 10
FONT         = pygame.font.Font('freesansbold.ttf', 20)
RED          = (255,   0,   0)
GREEN        = (  0, 255,   0)
BLUE         = (  0,   0, 255)
BLACK        = (  0,   0,   0)
FPS          = 15
CLOCK        = pygame.time.Clock()


def runGame():
    global DISPLAYSURF, BGCOLOR, X, Y, XFOOD, YFOOD
    
    BGCOLOR     = BLACK
    DISPLAYSURF = pygame.display.set_mode((WINDOWWIDTH, WINDOWHEIGHT))
    
    gameOver = False
    Close    = False
    
    X  = WINDOWWIDTH / 2
    Y  = WINDOWHEIGHT / 2
    
    SNAKELIST   = []
    
    SNAKELENGTH = 1
    
    XFOOD = round(random.randint(0, WINDOWWIDTH - SNAKEBLOCK) / 10.0) * 10.0
    YFOOD = round(random.randint(0, WINDOWHEIGHT - SNAKEBLOCK) / 10.0) * 10.0
    
    pygame.display.set_caption("Snake Game by MadCoderErr")
    
    while not Close:
        
        while gameOver == True:
            DISPLAYSURF.fill(BGCOLOR)
            message("Game over. Press p to play again or q to quit.", BLUE)
            pygame.display.update()
            for event in pygame.event.get():
                if event.type == KEYDOWN:
                    if (event.key == K_q):
                        terminate()
                    if event.key == K_p:
                        gameOver = False
                        runGame()
                if event.type == QUIT:
                    terminate()
                    
        for event in pygame.event.get():
            if event.type == QUIT:
                terminate()
                
        if event.type == KEYDOWN or event.type == KEYUP:    
            if event.key == K_LEFT:
                X -= SNAKESPEED
                
            if event.key == K_RIGHT:
                X += SNAKESPEED
                
            if event.key == K_UP:
                Y -= SNAKESPEED
                
            if event.key == K_DOWN:
                Y += SNAKESPEED
                
            if X == XFOOD and Y == YFOOD:
                XFOOD = round(random.randint(0, WINDOWWIDTH - SNAKEBLOCK) / 10.0) * 10.0
                YFOOD = round(random.randint(0, WINDOWHEIGHT - SNAKEBLOCK) / 10.0) * 10.0
                SNAKELENGTH += 1
                SNAKEHEAD = []
                SNAKEHEAD.append(X)
                SNAKEHEAD.append(Y)
                SNAKELIST.append(SNAKEHEAD)

        if X >= WINDOWWIDTH or X <= 0 or Y >= WINDOWHEIGHT or Y <= 0:
            gameOver = True
        showScore(SNAKELENGTH, BLUE)       
        DISPLAYSURF.fill(BGCOLOR)   
        pygame.draw.rect(DISPLAYSURF, GREEN, (X, Y, SNAKEBLOCK, SNAKEBLOCK))
        makeSnake(SNAKELIST, SNAKEBLOCK)
        randomFood(SNAKEBLOCK)
        showScore(SNAKELENGTH, BLUE)
        
        pygame.display.update()
        CLOCK.tick(FPS)
            
            
def terminate():
    pygame.quit()
    sys.exit()
    
    
def message(msg, color):
    mesg = FONT.render(msg, True, color)
    DISPLAYSURF.blit(mesg, [0, 50])
    

def makeSnake(SNAKELIST, SNAKEBLOCK):
    for s in SNAKELIST:
        pygame.draw.rect(DISPLAYSURF, GREEN, (round(s[0]), round(s[1]), SNAKEBLOCK, SNAKEBLOCK))
        
        
def randomFood(SNAKEBLOCK):
    pygame.draw.rect(DISPLAYSURF, RED, (XFOOD, YFOOD, SNAKEBLOCK, SNAKEBLOCK))
    
    
def showScore(score, color):
    for a in range(score - 1):
        message("Your score: %s" % a, BLUE)
    
        
if __name__ == '__main__':
    runGame()
